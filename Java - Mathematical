if (number < 10) {
  //Do Something
}


//Square root from Number
double number = 16;
double sqrtNumber = Math.sqrt(number);
System.out.println(sqrtNumber); //4
    
    
    
//Randrom Number from 1 till *
int randomNumber = (int) (Math.random() *6) + 1; //*6 + 1 - Generate from 1 till 6 